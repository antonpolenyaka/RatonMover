<Window x:Class="MouseMoverApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Raton Mover App" Height="200" Width="300">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Button x:Name="StartButton" Content="Start" Width="150" Height="50" Click="StartButton_Click"/>
        <Button x:Name="StopButton" Content="Stop" Width="150" Height="50" Click="StopButton_Click" Margin="0,20,0,0" IsEnabled="False"/>
    </StackPanel>
</Window>
